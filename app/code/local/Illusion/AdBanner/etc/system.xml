<?xml version="1.0"?>
<config>
    <tabs>
        <illusion translate="label" module="illusion_adbanner">
            <label>Illusion</label>
            <sort_order>150</sort_order>
        </illusion>
    </tabs>
    <sections>
        <adbanner translate="label" module="illusion_adbanner">
            <label>AdBanner</label>
            <tab>illusion</tab>
            <frontend_type>text</frontend_type>
            <sort_order>45</sort_order>
            <show_in_default>1</show_in_default>
            <show_in_website>1</show_in_website>
            <show_in_store>1</show_in_store>
            <groups>
                <adbanneradvancedsettings translate="label">
                    <label>Adv Banner Display Settings</label>
                    <sort_order>602</sort_order>
                    <show_in_default>1</show_in_default>
                    <show_in_website>1</show_in_website>
                    <show_in_store>1</show_in_store>
                    <fields>
                        <enabled translate="label">
                            <label>Enable Module</label>
                            <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_yesno</source_model>
                            <sort_order>5</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </enabled>
                        <adbannerdisplaylabelenabled translate="label">
                            <label>Display AdBanner Title </label>
                            <comment><![CDATA[ Display Banner with Title. ]]></comment>
                            <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_yesno</source_model>
                            <sort_order>47</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </adbannerdisplaylabelenabled>
                        <adbannerimgwidth translate="label">
                            <label>AdBanner Width</label>
                            <frontend_type>text</frontend_type>
                            <sort_order>44</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </adbannerimgwidth>
                        <adbannerimgheight translate="label">
                            <label>AdBanner Height</label>
                            <frontend_type>text</frontend_type>
                            <sort_order>45</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </adbannerimgheight>
                        <adbannerdisplayrandomlyenabled translate="lable">
                            <label>Display AdBanner Randomly Enabled</label>
                            <comment><![CDATA[ Display AdBanner in Random order. If 'yes' then Adv Banner ID wont be followed. ]]></comment>
                            <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_yesno</source_model>
                            <sort_order>46</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </adbannerdisplayrandomlyenabled>
                        <adbannerid translate="lable">
                            <label>AdBanner ID</label>
                            <frontend_type>text</frontend_type>
                            <sort_order>47</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </adbannerid>
                    </fields>
                </adbanneradvancedsettings>
                <adancedadbannerblocksettings translate="label">
                    <label>Adv Banner Block Settings</label>
                    <sort_order>603</sort_order>
                    <show_in_default>1</show_in_default>
                    <show_in_website>1</show_in_website>
                    <show_in_store>1</show_in_store>
                    <fields>
                        <adbannerdisplayleftblockenabled translate="lable">
                            <label>Display AdBanner Block in Left Column</label>
                            <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_yesno</source_model>
                            <sort_order>48</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
