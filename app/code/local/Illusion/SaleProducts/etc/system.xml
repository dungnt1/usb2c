<?xml version="1.0"?>
<config>
    <tabs>
        <illusion translate="label" module="illusion_saleproducts">
            <label>Illusion</label>
            <sort_order>150</sort_order>
        </illusion>
    </tabs>
    <sections>
        <sale_products translate="label" module="illusion_saleproducts">
            <label>SaleProducts Slider</label>
            <tab>illusion</tab>
            <frontend_type>text</frontend_type>
            <sort_order>33.</sort_order>
            <show_in_default>1</show_in_default>
            <show_in_website>1</show_in_website>
            <show_in_store>1</show_in_store>
            <groups>
                <settings translate="label">
                    <label>Settings</label>
                    <sort_order>1</sort_order>
                    <show_in_default>1</show_in_default>
                    <show_in_website>1</show_in_website>
                    <show_in_store>1</show_in_store>
                    <fields>
                        <enable translate="label">
                            <label>Enable Module</label>
                            <frontend_type>select</frontend_type>
                            <sort_order>1</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                            <source_model>adminhtml/system_config_source_yesno</source_model>
                        </enable>
                        <auto_play translate="label comment">
                            <label>Auto Play</label>
                            <frontend_type>select</frontend_type>
                            <source_model>illusion_settings/system_config_source_true_truefalse</source_model>
                            <sort_order>3</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </auto_play>
                        <title translate="label">
                            <label>Sale Products Title</label>
                            <frontend_type>text</frontend_type>
                            <sort_order>4</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </title>
                        <qty translate="label">
                            <label>Qty of products</label>
                            <frontend_type>text</frontend_type>
                            <sort_order>5</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                            <validate>validate-number</validate>
                        </qty>
                        <items translate="label">
                            <label>Products per layout</label>
                            <frontend_model>adminhtml/system_config_form_field_heading</frontend_model>
                            <sort_order>20</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </items>
                        <single translate="label">
                            <label>Single product per slider</label>
                            <frontend_type>select</frontend_type>
                            <source_model>illusion_settings/system_config_source_true_truefalse</source_model>
                            <sort_order>25</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                            <comment><![CDATA[<p class="note">If Yes than only one product will be inside slider</p>]]></comment>
                        </single>
                        <items_1column translate="label">
                            <label>Products for 1 column layout</label>
                            <frontend_type>text</frontend_type>
                            <sort_order>30</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                            <validate>required-entry</validate>
                            <validate>validate-number</validate>
                            <depends>
                                <single>false</single>
                            </depends>
                            <comment><![CDATA[<p class="note">No. of products inside one slider, for 1column layout</p>]]></comment>
                        </items_1column>
                        <items_2column translate="label">
                            <label>Products for 2 columns layout</label>
                            <frontend_type>text</frontend_type>
                            <sort_order>35</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                            <validate>required-entry</validate>
                            <validate>validate-number</validate>
                            <depends>
                                <single>false</single>
                            </depends>
                            <comment><![CDATA[<p class="note">No. of products inside one slider, for 2columns layout, left or right</p>]]></comment>
                        </items_2column>
                        <items_3column translate="label">
                            <label>Products for 3 columns layout</label>
                            <frontend_type>text</frontend_type>
                            <sort_order>40</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                            <validate>required-entry</validate>
                            <validate>validate-number</validate>
                            <depends>
                                <single>false</single>
                            </depends>
                            <comment><![CDATA[<p class="note">No. of products inside one slider, for 3columns layout</p>]]></comment>
                        </items_3column>
                    </fields>
                </settings>
            </groups>
        </sale_products>
    </sections>
</config>
