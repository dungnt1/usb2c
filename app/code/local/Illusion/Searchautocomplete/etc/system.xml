<?xml version="1.0"?>
<config>
    <tabs>
        <illusion translate="label" module="illusion_searchautocomplete">
            <label>Illusion</label>
            <sort_order>150</sort_order>
        </illusion>
    </tabs>
    <sections>
		<searchautocomplete translate="label" module="searchautocomplete">
           	<label>Ajax Search Auto Complete</label>
            <tab>illusion</tab>
   	        <frontend_type>text</frontend_type>
       	    <sort_order>15</sort_order>
           	<show_in_default>1</show_in_default>
           	<show_in_website>1</show_in_website>
           	<show_in_store>1</show_in_store>
            <groups>
                <settings translate="label">
            		<label>Settings</label>
                    <sort_order>1</sort_order>
                    <show_in_default>1</show_in_default>
                    <show_in_website>1</show_in_website>
                    <show_in_store>1</show_in_store>
                    <fields>
                        <enable translate="label">
                            <label>Enable Module</label>
                            <frontend_type>select</frontend_type>
                            <sort_order>1</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <source_model>adminhtml/system_config_source_yesno</source_model>
                        </enable>
                        <border_color translate="label">
                            <label>Border Color</label>
                            <frontend_type>text</frontend_type>
                            <frontend_model>illusion_settings/adminhtml_system_config_form_fields_color</frontend_model>
                            <backend_model>illusion_settings/system_config_source_color_validate</backend_model>
                            <sort_order>4</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                        </border_color>
                        <border_width translate="label">
                            <label>Border Width (px)</label>
                            <frontend_type>text</frontend_type>
                            <sort_order>4</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                        </border_width>
                        <hover_background translate="label">
                            <label>Hover Background</label>
                            <frontend_type>text</frontend_type>
                            <frontend_model>illusion_settings/adminhtml_system_config_form_fields_color</frontend_model>
                            <backend_model>illusion_settings/system_config_source_color_validate</backend_model>
                            <sort_order>5</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                        </hover_background>
                </fields>
            	</settings>
                <suggest translate="label">
            		<label>Suggest</label>
                    <frontend_type>text</frontend_type>
                    <sort_order>2</sort_order>
                    <show_in_default>1</show_in_default>
                    <show_in_website>1</show_in_website>
                    <show_in_store>1</show_in_store>
                    <fields>
                        <enable translate="">
                            <label>Enable</label>
                            <frontend_type>select</frontend_type>
                            <sort_order>1</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <source_model>adminhtml/system_config_source_yesno</source_model>
                        </enable>
                        <background translate="">
                            <label>Background</label>
                            <frontend_type>text</frontend_type>
                            <frontend_model>illusion_settings/adminhtml_system_config_form_fields_color</frontend_model>
                            <backend_model>illusion_settings/system_config_source_color_validate</backend_model>
                            <sort_order>2</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                        </background>
                        <suggest_color translate="">
                            <label>Suggest Color</label>
                            <frontend_type>text</frontend_type>
                            <frontend_model>illusion_settings/adminhtml_system_config_form_fields_color</frontend_model>
                            <backend_model>illusion_settings/system_config_source_color_validate</backend_model>
                            <sort_order>3</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                        </suggest_color>
                        <count_color translate="">
                            <label>Count Color</label>
                            <frontend_type>text</frontend_type>
                            <frontend_model>illusion_settings/adminhtml_system_config_form_fields_color</frontend_model>
                            <backend_model>illusion_settings/system_config_source_color_validate</backend_model>
                            <sort_order>4</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                        </count_color>
                    </fields>
                </suggest>
                <preview translate="label">
                <label>Product Preview</label>
                <sort_order>3</sort_order>
                <show_in_default>1</show_in_default>
                <show_in_website>1</show_in_website>
                <show_in_store>1</show_in_store>
                <fields>
                    <enable translate="">
                        <label>Enable</label>
                        <frontend_type>select</frontend_type>
                        <sort_order>1</sort_order>
                        <show_in_default>1</show_in_default>
                        <show_in_website>1</show_in_website>
                        <source_model>adminhtml/system_config_source_yesno</source_model>
                    </enable>
                    <number_product translate="">
                        <label>Number Product Show</label>
                        <frontend_type>text</frontend_type>
                        <sort_order>2</sort_order>
                        <show_in_default>1</show_in_default>
                        <show_in_website>1</show_in_website>
                    </number_product>

                    <show_image translate="">
                        <label>Show Product Image</label>
                        <frontend_type>select</frontend_type>
                        <sort_order>3</sort_order>
                        <show_in_default>1</show_in_default>
                        <show_in_website>1</show_in_website>
                        <source_model>adminhtml/system_config_source_yesno</source_model>
                    </show_image>
                    <show_name translate="">
                        <label>Show Product Name</label>
                        <frontend_type>select</frontend_type>
                        <sort_order>4</sort_order>
                        <show_in_default>1</show_in_default>
                        <show_in_website>1</show_in_website>
                        <source_model>adminhtml/system_config_source_yesno</source_model>
                    </show_name>

                    <show_description translate="">
                        <label>Show Product Descrition</label>
                        <frontend_type>select</frontend_type>
                        <sort_order>5</sort_order>
                        <show_in_default>1</show_in_default>
                        <show_in_website>1</show_in_website>
                        <source_model>adminhtml/system_config_source_yesno</source_model>
                    </show_description>
                    <num_char_description translate="">
                        <label>Number character of Product Descrition</label>
                        <frontend_type>text</frontend_type>
                        <sort_order>6</sort_order>
                        <show_in_default>1</show_in_default>
                        <show_in_website>1</show_in_website>
                        </num_char_description>
                    <background translate="">
                        <label>Background</label>
                        <frontend_type>text</frontend_type>
                        <frontend_model>illusion_settings/adminhtml_system_config_form_fields_color</frontend_model>
                        <backend_model>illusion_settings/system_config_source_color_validate</backend_model>
