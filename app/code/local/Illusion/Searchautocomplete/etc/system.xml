                        <sort_order>10</sort_order>
                        <show_in_default>1</show_in_default>
                        <show_in_website>1</show_in_website>
                    </pro_description_color>
                    <image_width translate="">
                        <label>Thumnail width (px)</label>
                        <frontend_type>text</frontend_type>
                        <sort_order>11</sort_order>
                        <show_in_default>1</show_in_default>
                        <show_in_website>1</show_in_website>
                    </image_width>
                    <image_height translate="">
                        <label>Thumnail height (px)</label>
                        <frontend_type>text</frontend_type>
                        <sort_order>12</sort_order>
                        <show_in_default>1</show_in_default>
                        <show_in_website>1</show_in_website>
                    </image_height>

                    <image_border_width translate="">
                        <label>Image border width (px)</label>
                        <frontend_type>text</frontend_type>
                        <sort_order>13</sort_order>
                        <show_in_default>1</show_in_default>
                        <show_in_website>1</show_in_website>
                    </image_border_width>
                    <image_border_color translate="">
                        <label>Image border color</label>
                        <frontend_type>text</frontend_type>
                        <frontend_model>illusion_settings/adminhtml_system_config_form_fields_color</frontend_model>
                        <backend_model>illusion_settings/system_config_source_color_validate</backend_model>
                        <sort_order>14</sort_order>
                        <show_in_default>1</show_in_default>
                        <show_in_website>1</show_in_website>
                    </image_border_color>
                </fields>
                </preview>
            </groups>
        </searchautocomplete>
	</sections>
</config>
