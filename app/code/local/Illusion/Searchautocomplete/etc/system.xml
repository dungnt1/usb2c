                        <show_in_default>1</show_in_default>
                        <show_in_website>1</show_in_website>
                    </background>
                        <pro_title_color translate="">
                        <label>Product Name Color</label>
                        <frontend_type>text</frontend_type>
                        <frontend_model>illusion_settings/adminhtml_system_config_form_fields_color</frontend_model>
                        <backend_model>illusion_settings/system_config_source_color_validate</backend_model>
                        <sort_order>9</sort_order>
                        <show_in_default>1</show_in_default>
                        <show_in_website>1</show_in_website>
                    </pro_title_color>
                    <pro_description_color translate="">
                        <label>Product Description Color</label>
                        <frontend_type>text</frontend_type>
                        <frontend_model>illusion_settings/adminhtml_system_config_form_fields_color</frontend_model>
