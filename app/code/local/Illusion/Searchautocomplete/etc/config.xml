<?xml version="1.0"?>
<config>
    <modules>
        <Illusion_Searchautocomplete>
            <version>1.0.0</version>
        </Illusion_Searchautocomplete>
    </modules>
    <frontend>
        <routers>
            <searchautocomplete>
                <use>standard</use>
                <args>
                    <module>Illusion_Searchautocomplete</module>
                    <frontName>searchautocomplete</frontName>
                </args>
            </searchautocomplete>
        </routers>
        <layout>
            <updates>
                <searchautocomplete>
                    <file>illusion_searchautocomplete.xml</file>
                </searchautocomplete>
            </updates>
        </layout>
    </frontend>
    <global>
        <models>
            <searchautocomplete>
                <class>Illusion_Searchautocomplete_Model</class>
                <resourceModel>searchautocomplete_mysql4</resourceModel>
            </searchautocomplete>
        </models>
        <blocks>
            <searchautocomplete>
                <class>Illusion_Searchautocomplete_Block</class>
            </searchautocomplete>
        </blocks>
        <helpers>
            <searchautocomplete>
                <class>Illusion_Searchautocomplete_Helper</class>
            </searchautocomplete>
        </helpers>
    </global>
    <default>
        <searchautocomplete>
            <settings>
                <enable>1</enable>
                <border_color>#CCCCCC</border_color>
                <border_width>1</border_width>
                <hover_background>#7FC1F8</hover_background>
            </settings>
            <suggest>
                <enable>1</enable>
                <suggest_color>#FFF</suggest_color>
                <background>#7fc1f8</background>
                <count_color>#FF0000</count_color>
            </suggest>
            <preview>
                <enable>1</enable>
                <number_product>5</number_product>
                <show_image>1</show_image>
                <show_name>1</show_name>
                <show_description>1</show_description>
                <num_char_description>100</num_char_description>
                <pro_description_color>#34383d</pro_description_color>
                <background>#ffffff</background>
                <pro_title_color>#34383d</pro_title_color>
                <image_width>50</image_width>
                <image_height>50</image_height>
                <image_border_width>1</image_border_width>
                <image_border_color>#CCC</image_border_color>
            </preview>
        </searchautocomplete>
    </default>
</config>
