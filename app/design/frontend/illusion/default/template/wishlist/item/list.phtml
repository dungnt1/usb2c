<?php
    $columns = $this->getColumns();
?>
<div class="r_corners wrapper border_grey wrap_sm">
    <table class="responsive_table w_full t_align_l">
        <thead>
        <tr class="bg_light_2 color_dark">
            <?php foreach ($columns as $column): ?>
                <th <?php if($column->getTitle() == 'Actions') echo 'style="width:160px;"';?>><?php echo $column->getTitle();?></th>
            <?php endforeach; ?>
        </tr>
        </thead>
        <tbody>
            <?php if (count($this->getItems())): ?>
                <?php foreach ($this->getItems() as $item): ?>
                    <tr class="tr_delay" id="item_<?php echo $item->getId();?>">
                        <?php foreach ($columns as $column): ?>
                            <td data-title="<?php echo $column->getTitle();?>"><?php $column->setItem($item); echo $column->toHtml($item);?></td>
                        <?php endforeach; ?>
                    </tr>
                <?php endforeach ?>
            <?php else: ?>
                <td colspan="<?php echo count($columns);?>" class="wishlist-empty"><?php echo $this->__('This Wishlist has no Items');?></td>
            <?php endif; ?>
        </tbody>
    </table>
</div>
<?php foreach ($columns as $column): ?>
    <?php echo $column->getAdditionalHtml();?>
<?php endforeach; ?>
<script type="text/javascript">
//<![CDATA[
    decorateTable('wishlist-table');

<?php foreach ($columns as $column): ?>
    <?php echo $column->getJs();?>
<?php endforeach; ?>
//]]>
</script>
