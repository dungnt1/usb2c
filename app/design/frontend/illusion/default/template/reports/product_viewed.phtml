<?php if ($_products = $this->getRecentlyViewedProducts()): ?>
    <div class="m_bottom_45 m_xs_bottom_30">
        <h5 class="fw_light color_dark m_bottom_23"><?php echo $this->__('Viewed Products') ?></h5>
        <ul class="recently-viewed-items">
            <?php foreach ($_products as $_item): ?>
                <li class="clearfix m_bottom_35 m_xs_bottom_30">
                    <a href="<?php echo $this->getProductUrl($_item);?>" class="f_left d_block f_sm_none f_xs_left d_sm_inline_b m_sm_bottom_5 m_xs_bottom_0 r_corners wrapper m_right_20">
                        <img src="<?php echo $this->helper('catalog/image')->init($_item, 'small_image')->resize(80,80); ?>" width="80" height="80" alt="<?php echo $this->stripTags($this->getImageLabel($_item, 'small_image'), null, true) ?>" class="" />
                    </a>
                    <a href="<?php echo $this->getProductUrl($_item);?>" class="color_dark lh_small d_block m_bottom_10 tr_all"><?php echo $this->helper('catalog/output')->productAttribute($_item, $_item->getName() , 'name') ?></a>
                    <p class="color_dark fs_medium fw_ex_bold fp_price m_bottom_3 product_listing_color">
                        <?php echo $this->getPriceHtml($_item, true); ?>
                    </p>
                </li>
            <?php endforeach;?>
        </ul>
        <script type="text/javascript">decorateList('recently-viewed-items');</script>
    </div>
<?php endif; ?>
