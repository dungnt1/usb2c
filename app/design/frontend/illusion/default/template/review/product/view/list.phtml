<?php $_items = $this->getReviewsCollection()->getItems();?>
<div class="box-collateral box-reviews" id="customer-reviews">
    <?php if (count($_items)):?>
        <?php echo $this->getChildHtml('toolbar') ?>

            <?php foreach ($_items as $_review):?>

                <div class="m_bottom_20">
                    <div class="d_table w_full m_bottom_20">
                        <div class="d_table_cell">
                            <!--author name-->
                            <div class="d_inline_m">
                                <a href="<?php echo $this->getReviewUrl($_review->getId()) ?>" class="fs_large color_dark tr_all"><b><?php echo $this->escapeHtml($_review->getNickname()); ?></b></a>
                                <p class="fs_medium color_grey d_mxs_none"><i><?php echo $this->__('%s', $this->formatDate($_review->getCreatedAt()), 'long') ?></i></p>
                            </div>
                        </div>
                        <div class="d_table_cell t_align_r v_align_m d_mxs_none ratings-list">
                            <?php $_votes = $_review->getRatingVotes(); ?>
                            <?php if (count($_votes)): ?>
                                <ul>
                                <?php foreach ($_votes as $_vote): ?>
                                    <li>
                                        <div class="rating-box f_left">
                                            <div class="rating" style="width:<?php echo $_vote->getPercent() ?>%;"></div>
                                        </div>
                                        <p class="rating-links f_left">
                                            <span class="reviews fs_medium f_left color_dark tr_all lh_ex_small"><?php echo $this->escapeHtml($_vote->getRatingCode()) ?></span>
                                        </p>
                                    </li>
                                <?php endforeach; ?>
                                </ul>
                            <?php endif;?>
                        </div>
                    </div>
                    <div class="comment relative r_corners bg_light_3 fw_light">
                        <a href="<?php echo $this->getReviewUrl($_review->getId()) ?>"><?php echo $this->escapeHtml($_review->getTitle()) ?></a><br/>
                        <?php echo nl2br($this->escapeHtml($_review->getDetail())) ?>
                    </div>
                </div>
            <?php endforeach; ?>
        <?php echo $this->getChildHtml('toolbar') ?>
    <?php endif;?>
    <?php echo $this->getChildHtml('review_form') ?>
</div>
