<?php if( $this->getCollection() && $this->count()): ?>
<div class="clearfix m_bottom_10 c_both">
    <div class="box-head">
        <h2><?php echo $this->__('My Recent Reviews') ?></h2>
        <button onclick="location.href='<?php echo $this->getAllReviewsUrl() ?>'" class="button_type_5 f_left m_right_20 tr_all color_blue transparent fs_medium r_corners"><?php echo $this->__('View All Reviews') ?></button>
    </div>
    <ol id="my_recent_reviews" class="c_both f_left m_top_10">
    <?php $iterator = 0 ?>
    <?php foreach ($this->getCollection() as $_review): ?>
        <li class="item f_left m_right_10">
            <span class="number fw_light"><?php echo ++$iterator ?></span>
            <div class="details">
                <h5 class="color_dark f_left fw_light"><a href="<?php echo $this->getReviewUrl($_review->getReviewId()) ?>"><?php echo $this->escapeHtml($_review->getName()) ?></a></h5>
                <?php if($_review->getSum()): ?>
                    <div class="ratings">
                        <?php echo $this->__('Rating:') ?>
                        <div class="rating-box">
                            <div class="rating" style="width:<?php echo ( $_review->getSum() / $_review->getCount() ) ?>%;"></div>
                        </div>
                    </div>
                <?php endif; ?>
            </div>
        </li>
    <?php endforeach; ?>
    </ol>
    <script type="text/javascript">decorateList('my_recent_reviews');</script>
</div>
<?php endif; ?>
