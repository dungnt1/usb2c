<?php echo $this->getMessagesBlock()->getGroupedHtml() ?>
<div class="page-title">
    <h1><?php echo $this->__('My Product Reviews') ?></h1>
</div>
<?php if( $this->getCollection() && $this->count()): ?>
    <?php echo $this->getToolbarHtml() ?>
<div class="r_corners wrapper border_grey wrap_sm">
    <table class="responsive_table w_full t_align_l">
        <thead>
        <tr class="bg_light_2 color_dark">
            <th><?php echo $this->__('Date') ?></th>
            <th><?php echo $this->__('Product Name') ?></th>
            <th><?php echo $this->__('Rating') ?></th>
            <th><?php echo $this->__('Comment') ?></th>
            <th><?php echo $this->__('Action') ?></th>
        </tr>
        <tbody>
            <?php foreach ($this->getCollection() as $_review): ?>
            <tr>
                <td data-title="<?php echo $this->__('Date') ?>"><span class="nobr"><?php echo $this->dateFormat($_review->getReviewCreatedAt()); ?></span></td>
                <td data-title="<?php echo $this->__('Product Name') ?>"><h2 class="product-name"><a href="<?php echo $this->getProductLink() ?>id/<?php echo $_review->getEntityPkValue() ?>"><?php echo $this->escapeHtml($_review->getName()) ?></a></h2></td>
                <td data-title="<?php echo $this->__('Rating') ?>">
                <?php if($_review->getSum()): ?>
                    <div class="rating-box">
                        <div class="rating" style="width:<?php echo ( $_review->getSum() / $_review->getCount() ) ?>%;"></div>
                    </div>
                <?php endif; ?>
                </td>
                <td data-title="<?php echo $this->__('Comment') ?>"><?php echo $this->helper('review')->getDetailHtml($_review->getDetail()) ?></td>
                <td data-title="<?php echo $this->__('Action') ?>" class="fw_light"><a href="<?php echo $this->getReviewLink() ?>id/<?php echo $_review->getReviewId() ?>" class="nobr"><?php echo $this->__('View Details') ?></a></td>
            </tr>
            <?php endforeach; ?>
        </tbody>
        </table>
</div>
        <script type="text/javascript">decorateTable('my-reviews-table')</script>
    <?php echo $this->getToolbarHtml() ?>
<?php else: ?>
    <p><?php echo $this->__('You have submitted no reviews.') ?></p>
<?php endif; ?>
<div class="buttons-set">
    <p class="back-link"><a href="<?php echo $this->escapeUrl($this->getBackUrl()) ?>"><small>&laquo; </small><?php echo $this->__('Back') ?></a></p>
</div>
