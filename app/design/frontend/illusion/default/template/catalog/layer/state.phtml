/**
 * Category layered navigation state
 *
 * @see Mage_Catalog_Block_Layer_State
 */
?>
<?php $_filters = $this->getActiveFilters() ?>
<?php if(!empty($_filters)): ?>
<div class="currently">
    <h6 class="color_dark fw_light m_bottom_8"><?php echo $this->__('Currently Shopping by:') ?></h6>
    <ul class="accordion_item r_corners wrapper m_bottom_5 tr_all padding_5">
    <?php foreach ($_filters as $_filter): ?>
        <li class="clearfix">
            <span class="m_bottom_8 fw_light color_default"><?php echo $this->__($_filter->getName()) ?>:</span> <span class="fw_light"><?php echo $this->stripTags($_filter->getLabel()) ?></span>
            <?php
                $clearLinkUrl = $_filter->getClearLinkUrl();
                if ($clearLinkUrl):
            ?>
                <a class="btn-previous f_right fw_light color_default" href="<?php echo $_filter->getRemoveUrl() ?>" title="<?php echo $this->__('Previous') ?>"><?php echo $this->__('Previous') ?></a>
                <a class="btn-remove f_right m_right_5" title="<?php echo $this->escapeHtml($_filter->getFilter()->getClearLinkText()) ?>" href="<?php echo $clearLinkUrl ?>"><i class="color_default icon-cancel close_alert_box tr_all translucent circle t_align_c"></i></a>
            <?php else: ?>

                <a class="btn-remove f_right" href="<?php echo $_filter->getRemoveUrl() ?>" title="<?php echo $this->__('Remove This Item') ?>"><i class="color_default icon-cancel close_alert_box tr_all translucent circle t_align_c"></i></a>
            <?php endif; ?>
        </li>
    <?php endforeach; ?>
    </ul>
</div>
<?php endif; ?>
