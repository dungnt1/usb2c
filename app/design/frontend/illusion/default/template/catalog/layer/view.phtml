/**
 * Category layered navigation
 *
 * @see Mage_Catalog_Block_Layer_View
 */
?>
<?php if($this->canShowBlock()): ?>
<div class="block block-layered-nav">
    <div class="block-title">
        <h5 class="color_dark fw_light m_bottom_35"><?php echo $this->__('Filter') ?></h5>
    </div>
    <div class="block-content">
        <?php echo $this->getStateHtml() ?>
        <?php if ($this->getLayer()->getState()->getFilters()): ?>
            <div class="actions m_bottom_35 t_align_r clearfix">
                <a class="button_type_5 f_right r_corners tr_all color_dark color_pink_hover fs_medium clearfix" href="<?php echo $this->getClearUrl() ?>"><?php echo $this->__('Clear All') ?></a>
            </div>
        <?php endif; ?>
        <?php if($this->canShowOptions()): ?>
            <h6 class="color_dark fw_light m_bottom_15"><?php echo $this->__('Shopping Options') ?></h6>
            <dl id="narrow-by-list" class="m_bottom_45">
                <?php $_filters = $this->getFilters() ?>
                <?php foreach ($_filters as $_filter): ?>
                <?php if($_filter->getItemsCount()): ?>
                    <dt><p class="m_bottom_8 fw_normal color_default"><?php echo $this->__($_filter->getName()) ?></p></dt>
                    <dd><?php echo $_filter->getHtml() ?></dd>
                <?php endif; ?>
                <?php endforeach; ?>
            </dl>
            <script type="text/javascript">decorateDataList('narrow-by-list')</script>
        <?php endif; ?>
    </div>
</div>
<?php endif; ?>
