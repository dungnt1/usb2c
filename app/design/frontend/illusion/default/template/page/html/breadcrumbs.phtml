<?php $breadCrumbs = Mage::getStoreConfig('illusion_settings/breadcrumb/enable');?>
<?php if($crumbs && is_array($crumbs) && $breadCrumbs): ?>
    <section class="page_title_2 bg_light_2 t_align_c relative wrapper" style="clear:both;">
        <?php echo Mage::app()->getLayout()->getBlock('inchoo.prevnext.links')->toHtml();?>
        <div class="container">
            <?php foreach($crumbs as $_crumbName=>$_crumbInfo): ?>
                <?php if($_crumbInfo['last']):?>
                    <h1 class="color_dark fw_light m_bottom_5 m_top_0 s_375"><?php echo $this->escapeHtml($_crumbInfo['label']) ?></h1>
                <?php endif;?>
            <?php endforeach;?>
            <ul class="hr_list d_inline_m breadcrumbs">
                <?php foreach($crumbs as $_crumbName=>$_crumbInfo): ?>
                    <li class="m_right_8 f_xs_none <?php echo $_crumbName ?>" itemscope itemtype="http://data-vocabulary.org/Breadcrumb">
                    <?php if($_crumbInfo['link']): ?>
                        <a itemprop="url" href="<?php echo $_crumbInfo['link'] ?>" title="<?php echo $this->escapeHtml($_crumbInfo['title']) ?>" class="color_default d_inline_m m_right_10"><span itemprop="title"><?php echo $this->escapeHtml($_crumbInfo['label']) ?></span></a>
                    <?php elseif($_crumbInfo['last']): ?>
                        <span class="color_default d_inline_m m_right_10"><?php echo $this->escapeHtml($_crumbInfo['label']) ?></span>
                    <?php else: ?>
                        <span class="color_default d_inline_m m_right_10"><?php echo $this->escapeHtml($_crumbInfo['label']) ?></span>
                    <?php endif; ?>
                    <?php if(!$_crumbInfo['last']): ?>
                        <i class="icon-angle-right d_inline_m color_default fs_small"></i>
                    <?php endif; ?>
                    </li>
                <?php endforeach; ?>
            </ul>
        </div>
    </section>
<?php endif; ?>
