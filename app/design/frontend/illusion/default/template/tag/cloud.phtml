<div class="m_bottom_45 m_xs_bottom_30">
    <h5 class="fw_light color_dark m_bottom_23"><?php echo $this->__('All Tags'); ?></h5>
    <?php if( sizeof($this->getTags()) > 0 ): ?>
    <ul class="hr_list tags_list">
        <?php foreach ($this->getTags() as $_tag): ?>
            <li class="m_right_5 m_bottom_5">
                <a href="<?php echo $_tag->getTaggedProductsUrl() ?>" style="font-size:<?php echo $_tag->getRatio()*70+75 ?>%;" class="r_corners button_type_2 d_block color_dark color_pink_hover fs_medium">
                    <?php echo $this->escapeHtml($_tag->getName()) ?>
                </a>
            </li>
        <?php endforeach;?>
    </ul>
    <?php else:?>
        <p class="fw_light color_default"><?php echo $this->__('There are no tags available.') ?></p>
    <?php endif;?>
</div>