<div class="col-lg-3 col-md-3 col-sm-3 m_bottom_15">
    <label for="<?php echo $this->getFieldId('gender')?>" class="<?php echo $this->isRequired() ? ' required ' : '' ?> d _inline_b fw_light w_full m_top_8 m_xs_top_0"><?php echo $this->__('Gender') ?></label>
</div>
<div class="col-lg-9 col-md-9 col-sm-9 m_bottom_15 m_top_5 m_xs_top_0">
    <?php $options = Mage::getResourceSingleton('customer/customer')->getAttribute('gender')->getSource()->getAllOptions();?>
    <?php $value = $this->getGender();?>
    <?php foreach ($options as $option):?>
        <?php if(!empty($option['value'])):?>
            <input value="<?php echo $option['value']?>" <?php echo $this->isRequired() ? ' data-bvalidator="required" ' : '' ?> type="radio" <?php if ($option['value'] == $value) echo ' checked="checked" ' ?> id="radio_<?php echo $option['value']?>" name="<?php echo $this->getFieldName('gender')?>" class="d_none <?php echo $this->isRequired() ? ' validate-radio ' : '' ?>" title="<?php echo $this->__('Gender') ?>">
            <label for="radio_<?php echo $option['value']?>" class="d_inline_m m_right_15 m_bottom_3 fw_light "><?php echo $option['label']?></label>
        <?php endif;?>
    <?php endforeach;?>
</div>
